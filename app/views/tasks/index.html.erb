<h1> Welcome </h1>
<ul>
  <%= form_for @task do |form| %>
    <%= render "error_messages", target: @task %>
    <div>
      <%=form.label :title %>
      <%=form.text_field :title %>
    </div>

    <div>
      <%=form.label :description %>
      <%=form.text_field :description %>
    </div>

    <div>
      <%= form.submit %>
     </div>
   <%end%>
  <%= render @tasks %>
</ul>
